<fieldset class="alert alert-secondary mb-2">
    <form action="contact" method="post">
      <label for="name">Full Name  <span class="text-danger"><strong>*</strong></span></label>
      <input class="form-control border-success w-25 p-2" type="text" name="name" id="name" placeholder="Entrer votre Nom au complet" ><br>
      <label for="email">Email <span class="text-danger"><strong>*</strong></span></label>
      <input class="form-control border-success w-25 p-2" type="email" name="email" id="email" placeholder="Entrer votre email" ><br>
      <label for="message">Message <span class="text-danger"><strong>*</strong></span></label>
      <textarea class="form-control border-success w-50 h-5" style="height: 150px" name="message" id="message" cols="30"  rows="2" placeholder="Entrer votre message" ></textarea><br>
      <input class="btn btn-success mt-2" type="submit" value="Soumettre" >
    </form> 
</fieldset> 








